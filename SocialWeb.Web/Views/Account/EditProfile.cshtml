@model SocialWeb.Application.Models.DTOs.EditProfileDto

@{
    ViewData["Title"] = "Edit Profile";
}
<div class="row">
    <div class="col-sm-9 col-md-7 col-lg-8 mx-auto">
        <div class="card card-signin my-5">
            <div class="card-body">
                <h5 class="card-title text-center">Edit Your Profile</h5>
                <form asp-action="EditProfile" class="form-signin" enctype="multipart/form-data">
                    <input hidden asp-for="Id" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-label-group">
                        <input asp-for="Name" class="form-control" placeholder="Name" />
                        <label asp-for="Name" class="control-label"></label>
                    </div>
                    <div class="form-label-group">
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <label asp-for="Password" class="control-label"></label>
                    </div>
                    <div class="form-label-group">
                        <input asp-for="UserName" class="form-control" placeholder="Username" />
                        <label asp-for="UserName" class="control-label"></label>
                    </div>
                    <div class="form-label-group">
                        <input asp-for="Email" class="form-control" placeholder="E-Mail" />
                        <label asp-for="Email" class="control-label"></label>
                    </div>
                    <div class="form-label-group">
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input type="file" name="file" class="form-control custom-file-input" />
                                <label class="custom-file-label">Choose File...</label>
                            </div>
                        </div>
                    </div>
                    <input type="submit" value="Save" class="btn btn-lg btn-primary btn-block text-uppercase" />

                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to Profile</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
