@model SendTweetDto

 <form  class="panel-activity__status" id="formAddTweet" enctype="multipart/form-data">
     <div id="tweetValidation" role="alert"></div>
     <input hidden asp-for="AppUserId" />
     <textarea name="Text" id="Text" type="text" placeholder="Share what you've been up to..." class="form-control"></textarea>
            <div class="actions">
               <div class="btn-group">
                  <label for="Image"><i class="fa fa-image"></i></label>
                  <input type="file" id="Image" name="Image" style="display: none;" data-toggle="tooltip" accept=".jpg, .jpeg, .png">
                   </div>
                <input type="button" id="btnSendTweet" class="btn btn-sm btn-rounded btn-info" value="Post">
            </div>
</form>
