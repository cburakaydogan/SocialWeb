@model FollowDto

 <input hidden asp-for="FollowerId"/>
            <input hidden asp-for="FollowingId"/>
@{ if (Model.isExist)
    {              
                    <button id="UnFollow" onclick="UnFollow()"  class="btn btn-rounded btn-info">
                    <i class="fa fa-minus"></i>
                    Unfollow
                    </button>
    }
    else
    {              
                    <button id="Follow" type="submit"  onclick="Follow()"  class="btn btn-rounded btn-info">
                    <i class="fa fa-plus"></i>
                    Follow
                    </button>
    }}